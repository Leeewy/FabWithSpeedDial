<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speed_dial_background"
    style="@style/match_parent_match_parent"
    android:translationZ="6dp"
    app:layout_anchor="@id/fab_main"
    app:layout_behavior=".behaviors.BonusExpandableTransformationBehavior"
    android:visibility="invisible"
    tools:visibility="visible">

    <com.leeewy.fabwithspeeddial.widgets.NotFlingingNestedScrollView
        android:id="@+id/fabs_scroll_view"
        style="@style/match_parent_match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:overScrollMode="never">
    
        <LinearLayout
            android:id="@+id/fabs_container"
            style="@style/match_parent_match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            tools:layout_marginBottom="80dp"
            tools:ignore="HardcodedText">

            <LinearLayout
                style="@style/wrap_content_wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fab_first_text"
                    style="@style/button_fab_text"
                    android:text="First FAB" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_first"
                    style="@style/button_fab"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginEnd="@dimen/margin_big"
                    app:srcCompat="@drawable/ic_fab_1" />

            </LinearLayout>

            <LinearLayout
                style="@style/wrap_content_wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fab_second_text"
                    style="@style/button_fab_text"
                    android:text="Second FAB" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_second"
                    style="@style/button_fab"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginEnd="@dimen/margin_big"
                    app:srcCompat="@drawable/ic_fab_2" />

            </LinearLayout>

            <LinearLayout
                style="@style/wrap_content_wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fab_third_text"
                    style="@style/button_fab_text"
                    android:text="Third FAB" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_third"
                    style="@style/button_fab"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginEnd="@dimen/margin_big"
                    app:srcCompat="@drawable/ic_fab_3" />

            </LinearLayout>

            <LinearLayout
                style="@style/wrap_content_wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fab_fourth_text"
                    style="@style/button_fab_text"
                    android:text="Fourth FAB" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_fourth"
                    style="@style/button_fab"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginEnd="@dimen/margin_big"
                    app:srcCompat="@drawable/ic_fab_4" />

            </LinearLayout>

            <LinearLayout
                style="@style/wrap_content_wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fab_fifth_text"
                    style="@style/button_fab_text"
                    android:text="Fifth FAB" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_fifth"
                    style="@style/button_fab"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginStart="@dimen/margin_big"
                    android:layout_marginEnd="@dimen/margin_big"
                    app:srcCompat="@drawable/ic_fab_5" />

            </LinearLayout>
    
        </LinearLayout>

    </com.leeewy.fabwithspeeddial.widgets.NotFlingingNestedScrollView>

    <View
        android:id="@+id/bottom_shadow"
        style="@style/match_parent_wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_speed_dial_shadow" />

</FrameLayout>